
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Purchase.cshtml";
}

<form class="form-group" method="post" , enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="col-form-label-lg"> Name</label>
            <div class="col-md-10">
                <input class="form-control" type="text" name="name" required/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label-lg"> Price</label>
            <div class="col-md-10">
                <input class="form-control" type="text" name="price" required/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label-lg"> Image</label>
            <div class="col-md-10">
                <input type="file" name="image" required/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label-lg"> Description</label>
            <div class="col-md-10">
                <input class="form-control" type="text" name="description" required />
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label-lg"> Category</label>
            <div class="col-md-10">
                <input class="form-control" type="text" name="category" required/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-form-label-lg"> Stock</label>
            <div class="col-md-10">
                <input class="form-control" type="text" name="stock" required/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </div>
    </div>
</form>
