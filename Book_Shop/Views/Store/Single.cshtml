<!-- products-breadcrumb -->
@section products_breadcrumb {
    <div class="products-breadcrumb">
        <div class="container">
            <ul>
                <li><i class="fa fa-home" aria-hidden="true"></i>@Html.ActionLink("Home", "Index", "Store")<span>|</span></li>
                <li>Single Page  </li>
            </ul>
        </div>
    </div>
}
<!-- //products-breadcrumb -->
<!-- banner -->
@section w3l_banner_nav_right {
    <div class="w3l_banner_nav_right_banner3">
        <h3>Best Deals For New Products<span class="blink_me"></span></h3>
    </div>
    <div class="agileinfo_single">
        <h5>@Model.name</h5>
        <div class="col-md-4 agileinfo_single_left">
            <img id="example" src="@Model.image" alt=" " class="img-responsive" />
        </div>
        <div class="col-md-8 agileinfo_single_right">
            <div class="rating1">Rate: 
                <span class="starRating">
                    @for (int star = 0; star < Model.rate; star++)
                    {
                        <label>@star</label>
                    }
                </span>
            </div>
            <div class="w3agile_description">
                <h4>Description :</h4>
                <p>
                    @Model.description
                </p>
            </div>
            <div class="snipcart-item block">
                <div class="snipcart-thumb agileinfo_single_right_snipcart" style="text-align:left;">
                    <span style="font-size: 1.3rem">đ@(Model.price)</span><h4 style="display: inline"><span style="color: red">đ@(Model.price*1.5)</span></h4>
                </div>
                <div class="snipcart-details agileinfo_single_right_details">
                    <input type="button" onclick="addToCart(@Model.id)" value="Add to cart" class="button" />
                </div>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>
}
