@model Book_Shop.Models.Payment

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin__layout">
    <table class="admin__table">
        <thead>
            <tr class="admin__header">
                <th style="text-align:center">Name</th>
                <th style="text-align:center">CardNumber</th>
                <th style="text-align:center">Money</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.name)</td>
                <td>@Html.DisplayFor(model => model.cardNumber)</td>
                <td>@Html.DisplayFor(model => model.money)</td>

            </tr>
        </tbody>
    </table>
    <div class="pagination">
        <a href="/Payments/Edit/@Model.id" class="action-link">Edit</a>
        <a href="/Payments/Index" class="action-link">Back to list</a>
    </div>
</div>
