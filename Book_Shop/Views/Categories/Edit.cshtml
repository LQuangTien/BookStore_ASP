@model Book_Shop.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*@Html.HiddenFor(model => model.id)*@
    <div class="admin__layout">
        <table class="admin__table table-vertical">
            <tr>
                <th class="admin__header">ID</th>
                <td>@Html.DisplayFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>
            <tr>
                <th class="admin__header">Name</th>
                <td>
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>
        <div class="pagination">
            <a class="action-link"><input type="submit" value="Save" /></a>
            <a href="/Categories/Index" class="action-link">Back to list</a>
        </div>
    </div>
}
