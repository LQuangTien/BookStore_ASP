@model Book_Shop.Models.Order_Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="admin__layout">
    <table class="admin__table">
        <thead>
            <tr class="admin__header">
                <th style="text-align:center">Quantity</th>
                <th style="text-align:center">Price</th>
                <th style="text-align:center">Status</th>
                <th style="text-align:center">Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.quantity)</td>
                <td>@Html.DisplayFor(model => model.price)</td>
                <td>@Html.DisplayFor(model => model.Order.status)</td>
                <td>@Html.DisplayFor(model => model.Product.name)</td>
            </tr>
        </tbody>
    </table>
    @using (Html.BeginForm("Delete", "Order_Product", FormMethod.Post, new { style = "margin-left: auto" }))
    {
        @Html.AntiForgeryToken()

        <div class="pagination">
            <a href="/Order_Product/Index" class="action-link">Back to list</a>
            <a href="/Order_Product/Index" class="action-link"><input type="submit" value="Delete" /></a>
        </div>
    }
</div>
