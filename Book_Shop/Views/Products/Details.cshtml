@model Book_Shop.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin__layout">
    <table class="admin__table">
        <thead>
            <tr class="admin__header">
                <th style="text-align:center">ID</th>
                <th style="text-align:center">Name</th>
                <th style="text-align:center">Image</th>
                <th style="text-align:center">Description</th>
                <th style="text-align:center">Category</th>
                <th style="text-align:center">Price</th>
                <th style="text-align:center">Rate</th>
                <th style="text-align:center">Stock</th>
                <th style="text-align:center">Author</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.id)</td>
                <td>@Html.DisplayFor(model => model.name)</td>
                <td><img width="120px" height="120px" src="@Html.DisplayFor(model => model.image)" /></td>
                <td>@Html.DisplayFor(model => model.description)</td>
                <td>@Html.DisplayFor(model => model.category)</td>
                <td>@Html.DisplayFor(model => model.price)</td>
                <td>@Html.DisplayFor(model => model.rate)</td>
                <td>@Html.DisplayFor(model => model.stock)</td>
                <td>@Html.DisplayFor(model => model.User.account)</td>

            </tr>
        </tbody>
    </table>
    <div class="pagination">
        <a href="/Products/Edit/@Model.id" class="action-link">Edit</a>
        <a href="/Products/Index" class="action-link">Back to list</a>
    </div>
</div>
